.form-page {
    padding-top: 72rpx;
}

.title {
    font-size: 72rpx;
    color: #42BD56;
    text-align: center;
}

.form-container {
    margin: 72rpx 40rpx 0;
}

.form-container .inputs-container {
    border: 1rpx solid #AAAAAA;
    border-radius: 8rpx;
}

.form-container .inputs-container .line {
    width: 100%;
    height: 88rpx;
    padding: 18rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.form-container .inputs-container .line:not(:last-child) {
    border-bottom: 1rpx solid #AAAAAA;
}

.form-container .inputs-container input {
    font-size: 30rpx;
    flex-grow: 1;
}

.form-container .inputs-container input .input-placeholder {
    color: #CCCCCC;
}

.form-container .inputs-container .captcha-wrapper {
    height: 40rpx;
    width: 220rpx;
}

.form-container .inputs-container .captcha-wrapper image {
    width: 100%;
    height: 100%;
}

.form-container .buttons-container {
    margin-top: 60rpx;
}

.weixin-login {
    margin-top: 62rpx;
    text-align: center;
    font-size: 30rpx;
    color: #AAAAAA;
}