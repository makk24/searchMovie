.search-bar {
    height: 88rpx;
    position: fixed;
    top: 0;
    width: 100%;
}

.search-bar .form {
    display: flex;
    background-color: #268dcd;
    padding: 16rpx;
    height: 56rpx;
}

.search-bar .input-area {
    background-color: #FFFFFF;
    height: 56rpx;
    display: block;
}

.search-bar .search-icon {
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position-x: center;
    background-position-y: center;
    background-size: 25rpx;
    background-origin: border-box;
}

.search-bar .search-icon {
    width: 56rpx;
    background-color: #FFFFFF;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.search-bar .cancel-btn {
    flex-grow: 0;
    flex-shrink: 0;
    width: 100rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
    color: #FFFFFF;
    margin-right: -16rpx;
}

.search-bar input.input-area {
    font-size: 26rpx;
    flex-grow: 1;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.search-bar .mock-input-area {
    width: 100%;
    border-radius: 10rpx;
    text-align: center;
    line-height: 56rpx;
}

.search-bar .mock-input-area>view {
    display: inline-block;
    vertical-align: middle;
}

.search-bar .mock-input-area .search-hint {
    font-size: 26rpx;
    color: #B2B2B2;
}

.search-bar .mock-input-area .search-icon {
    width: 45rpx;
    height: 25rpx;
}